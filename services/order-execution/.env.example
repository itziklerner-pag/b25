# Order Execution Service Environment Variables
# Copy this file to .env and fill in your actual values

# Binance API Credentials (REQUIRED)
# Get testnet keys from: https://testnet.binancefuture.com/
# Get production keys from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Exchange Configuration
BINANCE_TESTNET=true  # Use true for testnet, false for production

# Redis Configuration
REDIS_ADDRESS=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# NATS Configuration
NATS_ADDRESS=nats://localhost:4222

# Server Configuration
GRPC_PORT=50051
HTTP_PORT=9091
SERVER_HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=info        # debug, info, warn, error
LOG_FORMAT=json       # json, console

# Rate Limiting
RATE_LIMIT_RPS=10     # Requests per second
RATE_LIMIT_BURST=20   # Burst capacity

# Risk Limits
MAX_ORDER_VALUE=1000000       # Maximum order value in USD
MAX_POSITION_SIZE=10          # Maximum position size in base currency
MAX_DAILY_ORDERS=10000        # Maximum orders per day
MAX_OPEN_ORDERS=500           # Maximum concurrent open orders

# Circuit Breaker
CB_MAX_REQUESTS=3             # Max requests in half-open state
CB_INTERVAL=60                # Reset interval in seconds
CB_TIMEOUT=30                 # Time to wait in open state (seconds)
CB_FAILURE_THRESHOLD=5        # Failures before opening circuit
CB_SUCCESS_THRESHOLD=2        # Successes needed to close circuit

# Performance Tuning
MAX_CONCURRENT_ORDERS=100     # Maximum concurrent order submissions
ORDER_CACHE_TTL=86400         # Order cache TTL in seconds (24h)
SYMBOL_INFO_REFRESH=3600      # Symbol info refresh interval (1h)
