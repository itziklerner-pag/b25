# Notification Service Environment Variables

# Server Configuration
NOTIFICATION_SERVER_PORT=9097
NOTIFICATION_SERVER_MODE=development

# Database Configuration
NOTIFICATION_DATABASE_HOST=localhost
NOTIFICATION_DATABASE_PORT=5432
NOTIFICATION_DATABASE_USER=notification_user
NOTIFICATION_DATABASE_PASSWORD=your_password_here
NOTIFICATION_DATABASE_DBNAME=notification_db
NOTIFICATION_DATABASE_SSLMODE=disable

# Redis Configuration
NOTIFICATION_REDIS_HOST=localhost
NOTIFICATION_REDIS_PORT=6379
NOTIFICATION_REDIS_PASSWORD=
NOTIFICATION_REDIS_DB=0

# SendGrid Configuration
NOTIFICATION_EMAIL_SENDGRID_API_KEY=your_sendgrid_api_key
NOTIFICATION_EMAIL_FROM_ADDRESS=notifications@trading-system.com
NOTIFICATION_EMAIL_FROM_NAME=B25 Trading System

# Twilio Configuration
NOTIFICATION_SMS_TWILIO_ACCOUNT_SID=your_twilio_account_sid
NOTIFICATION_SMS_TWILIO_AUTH_TOKEN=your_twilio_auth_token
NOTIFICATION_SMS_TWILIO_FROM_NUMBER=+1234567890

# Firebase Configuration
NOTIFICATION_PUSH_FCM_CREDENTIALS_FILE=/path/to/firebase-credentials.json
NOTIFICATION_PUSH_FCM_PROJECT_ID=your_project_id

# Logging
NOTIFICATION_LOGGING_LEVEL=info
NOTIFICATION_LOGGING_FORMAT=json
