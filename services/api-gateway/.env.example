# API Gateway Environment Variables

# Server configuration
CONFIG_PATH=config.yaml
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_MODE=release

# Service URLs
MARKET_DATA_URL=http://market-data:9090
ORDER_EXECUTION_URL=http://order-execution:9091
STRATEGY_ENGINE_URL=http://strategy-engine:9092
ACCOUNT_MONITOR_URL=http://account-monitor:9093
DASHBOARD_SERVER_URL=http://dashboard-server:8080
RISK_MANAGER_URL=http://risk-manager:9095
CONFIGURATION_URL=http://configuration:9096

# Authentication
JWT_SECRET=change-this-in-production
API_KEY_ADMIN=admin-key-change-this
API_KEY_OPERATOR=operator-key-change-this
API_KEY_VIEWER=viewer-key-change-this

# Redis
REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature flags
ENABLE_CACHE=true
ENABLE_RATE_LIMIT=true
ENABLE_AUTH=true
ENABLE_CIRCUIT_BREAKER=true
