# Risk Manager Service Environment Variables

# Server Configuration
RISK_SERVER_PORT=9095
RISK_SERVER_MODE=development

# Database Configuration
RISK_DATABASE_HOST=localhost
RISK_DATABASE_PORT=5432
RISK_DATABASE_USER=postgres
RISK_DATABASE_PASSWORD=postgres
RISK_DATABASE_DATABASE=risk_manager
RISK_DATABASE_SSLMODE=disable

# Redis Configuration
RISK_REDIS_HOST=localhost
RISK_REDIS_PORT=6379
RISK_REDIS_PASSWORD=
RISK_REDIS_DB=0

# NATS Configuration
RISK_NATS_URL=nats://localhost:4222

# gRPC Configuration
RISK_GRPC_PORT=50051

# Risk Configuration
RISK_RISK_MAXLEVERAGE=10.0
RISK_RISK_MAXDRAWDOWNPERCENT=0.20
RISK_RISK_EMERGENCYTHRESHOLD=0.25

# Logging Configuration
RISK_LOGGING_LEVEL=info
RISK_LOGGING_FORMAT=json

# Metrics Configuration
RISK_METRICS_ENABLED=true
RISK_METRICS_PORT=9095
