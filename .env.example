# B25 Trading Platform - Environment Configuration Example
# Copy this file to .env and update with your values

# ============================================
# Infrastructure Credentials
# ============================================

# Redis
REDIS_PASSWORD=your_secure_redis_password_here

# PostgreSQL (Config Database)
POSTGRES_DB=b25_config
POSTGRES_USER=b25
POSTGRES_PASSWORD=your_secure_postgres_password_here

# TimescaleDB (Time Series Database)
TIMESCALEDB_NAME=b25_timeseries
TIMESCALEDB_USER=b25
TIMESCALEDB_PASSWORD=your_secure_timescaledb_password_here

# ============================================
# Security & Authentication
# ============================================

# JWT Secret (use a strong random string)
JWT_SECRET=your_jwt_secret_key_min_32_chars_here

# Session Secret
SESSION_SECRET=your_session_secret_key_here

# API Keys
EXCHANGE_API_KEY=your_exchange_api_key
EXCHANGE_SECRET_KEY=your_exchange_secret_key

# ============================================
# Service Configuration
# ============================================

# Environment
NODE_ENV=production
ENVIRONMENT=production

# Logging
LOG_LEVEL=info

# API Gateway
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000

# CORS
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Monitoring & Observability
# ============================================

# Grafana
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password
GRAFANA_ROOT_URL=https://grafana.yourdomain.com

# Prometheus
PROMETHEUS_RETENTION_DAYS=30

# ============================================
# External Services
# ============================================

# Email Service (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# Slack Webhook (for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# PagerDuty
PAGERDUTY_API_KEY=your_pagerduty_api_key
PAGERDUTY_SERVICE_KEY=your_service_key

# ============================================
# Docker Registry
# ============================================

DOCKER_REGISTRY=ghcr.io/yourorg
VERSION=latest

# ============================================
# Application URLs
# ============================================

API_URL=https://api.yourdomain.com
WS_URL=wss://ws.yourdomain.com

# ============================================
# Feature Flags
# ============================================

ENABLE_LIVE_TRADING=false
ENABLE_BACKTESTING=true
ENABLE_PAPER_TRADING=true
ENABLE_METRICS_EXPORT=true

# ============================================
# Performance Tuning
# ============================================

# Connection Pools
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=5

# Redis
REDIS_MAX_CLIENTS=1000

# Worker Threads
WORKER_THREADS=4
